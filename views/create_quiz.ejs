<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz App</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/create_quiz.js"></script>
</head>

<body>
  <%- include('partials/_navbar'); %>
    <section id="create-quiz" class="container padded">
      <h1 class="is-size-2 has-text-white has-text-weight-bold my-5">Create a Quiz</h1>
      <form id="quiz-form" class="container" action="/quizzes" method="post">
        <div class="box">
          <div class="field">
            <label class="label">Title</label>
            <div class="control">
              <input id="q-title" class="input" type="text" placeholder="Quiz Title">
            </div>
          </div>
          <div class="field">
            <label class="label">Description</label>
            <div class="control">
              <textarea id="q-description" class="textarea" placeholder="Quiz Description"></textarea>
            </div>
          </div>
          <label class="checkbox">
            <input id="q-public" checked type="checkbox">
            Make quiz public
          </label>
        </div>
        <div id="q-questions"></div>

        <button id="submit-quiz" class="submit-quiz button is-info has-text-weight-bold mt-5" type="button"
          for="questions-form">Submit Quiz</button>
        <button id="add-question" type="button" class="add-question button is-light mt-5 ml-3">Add
          Question</button>
      </form>
    </section>
</body>

</html>
